<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter"/>
    <springProperty name="PROFILE" source="monitoring-profile" />

    <!-- 패턴 정의 - CloudWatch Logs용 -->
    <property name="CONSOLE_LOG_PATTERN" value='{"timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}","level":"%level","thread":"%thread","logger":"%logger","module":"batch","environment":"${SPRING_PROFILES_ACTIVE:-lambda}","message":"%msg","requestId":"${aws.requestId:-}","functionName":"${aws.functionName:-}","functionVersion":"${aws.functionVersion:-}"}%n'/>
    <property name="LOG_PATTERN" value="${CONSOLE_LOG_PATTERN}"/>

    <!-- Console Appender - CloudWatch Logs로 자동 전송됨 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- Lambda 환경 - Console 로그만 사용 (CloudWatch Logs로 자동 전송) -->
    <springProfile name="local">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="dev,lambda">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="test">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
